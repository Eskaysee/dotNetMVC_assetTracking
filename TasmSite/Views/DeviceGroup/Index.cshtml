@model IEnumerable<TasmSite.Models.DeviceGroup>

@{
    ViewBag.Title = "Device Categories";
}

<h2 id="title">@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            Category
        </th>
        <th>
            Parent Group
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DeviceGroup2.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>

<button id="CreateButton">@Html.ActionLink("Create New", "Create")</button>
